@page
@using System.Globalization
@model t3hmun.WebLog.Web.Pages.HomeModel

<h1>Home</h1>

<div>
    <p>
        @(Model.MessageOfTheDay)
    </p>
</div>

@foreach (var summary in Model.PostSummaries.OrderByDescending(p=>p.Date))
{
    <div>
        <div>
            <div>
                <a href="@(summary.Link)"><h2>@(summary.Title)</h2></a>
            </div>
            <div>
                <span>@summary.Date.ToString("D", CultureInfo.InvariantCulture)</span>
            </div>
        </div>
        <div>
            <p>
                @(summary.Description)
            </p>
        </div>
    </div>
}